{
  "manifest_version": 3,
  "name": "Google Form Logger",
  "version": "2.0",
  "description": "Logs when a Google Form is submitted to a backend.",
  "permissions": [
    "identity",
    "identity.email"
  ],
  "host_permissions": [
    "https://chrome-extension-of-forms.onrender.com/submit"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/forms/d/e/*/viewform*"],
      "js": ["content_open.js"]
    },
    {
      "matches": [
        "https://docs.google.com/forms/d/e/*/formResponse*",
        "https://docs.google.com/forms/u/*/d/e/*/formResponse*"
      ],
      "js": ["content_submit.js"]
    }
  ],
  "icons": {
    "16": "images/image.png",
    "48": "images/image.png",
    "128": "images/image.png"
  }
}
